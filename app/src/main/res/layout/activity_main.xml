<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-52dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baslik"
            android:fontFamily="@font/telex"
            android:gravity="center"
            android:text="TOPLAM TUTAR"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textViewToplamTutar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textViewToplamTutar"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cerceve"
            android:fontFamily="@font/telex"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textViewKdvTutari" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baslik"
            android:fontFamily="@font/telex"
            android:gravity="center"
            android:text="KDV TUTARI"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textViewIslemTutari"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textViewKdvTutari"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cerceve"
            android:fontFamily="@font/telex"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textViewIslemTutari" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baslik"
            android:fontFamily="@font/telex"
            android:gravity="center"
            android:text="KDV GİRİN"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editKDV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/editKDV"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cerceve"
            android:ems="10"
            android:fontFamily="@font/telex"
            android:hint="Kdv Oran Seçiniz."
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/editTutar" />

        <Button
            android:id="@+id/buttonBaslik"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/baslik"
            android:fontFamily="@font/telex"
            android:text="***KDV HESAPLAMA PROGRAMI***"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baslik"
            android:fontFamily="@font/telex"
            android:gravity="center"
            android:text="TUTAR GİRİNİZ"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editTutar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonBaslik" />

        <EditText
            android:id="@+id/editTutar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cerceve"
            android:ems="10"
            android:fontFamily="@font/telex"
            android:hint="Tutar Giriniz."
            android:inputType="numberDecimal"
            android:maxLength="13"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/buttonBaslik" />

        <Button
            android:id="@+id/buttonYuzde18"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hesapla_selector"
            android:fontFamily="@font/telex"
            android:text="%18"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/buttonYuzde8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/buttonYuzde8"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hesapla_selector"
            android:fontFamily="@font/telex"
            android:text="%8"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/buttonYuzde1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonYuzde18"
            app:layout_constraintTop_toBottomOf="@+id/editKDV" />

        <Button
            android:id="@+id/buttonYuzde1"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hesapla_selector"
            android:fontFamily="@font/telex"
            android:text="%1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonYuzde8"
            app:layout_constraintTop_toBottomOf="@+id/editKDV" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonYuzde18">

            <RadioButton
                android:id="@+id/radioButtonKdvDahil"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/hesapla_selector"
                android:buttonTint="@android:color/holo_green_dark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="KDV Dahil " />

            <RadioButton
                android:id="@+id/radioButton2KdvHaric"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/hesapla_selector"
                android:buttonTint="@android:color/holo_red_dark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="KDV Hariç " />
        </RadioGroup>

        <Button
            android:id="@+id/buttonHesapla"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hesapla_selector"
            android:fontFamily="@font/telex"
            android:text="Hesapla"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:adSize="SMART_BANNER"
            app:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonHesapla">

        </com.google.android.gms.ads.AdView>

        <TextView
            android:id="@+id/textViewKdvDahilorHaric"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cerceve"
            android:fontFamily="@font/telex"
            android:gravity="center"
            android:text="   **********  KDV  **********   "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/baslik"
            android:fontFamily="@font/telex"
            android:gravity="center"
            android:text="İŞLEM TUTARI"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textViewIslemTutari"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewKdvDahilorHaric" />

        <TextView
            android:id="@+id/textViewIslemTutari"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cerceve"
            android:fontFamily="@font/telex"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textViewKdvDahilorHaric" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>